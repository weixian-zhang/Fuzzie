// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "debug fuzzer",
			"type": "python",
			"request": "launch",
			"program": "__main__.py",
			"args": ["webserver", "start"],
			"console": "integratedTerminal",
			"justMyCode": true,
			"cwd": "${workspaceFolder}/src/core/core"
		},
		{
			"name": "debug vscode",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/src/clients/vscode"
			],
			"outFiles": [
				"${workspaceFolder}/src/clients/vscode/dist/**/*.js"
			],
			"preLaunchTask": "npm watch extension",
			"sourceMaps": true,
			//important, if not breakpoint remains unbound
			"sourceMapPathOverrides": {
				"webpack://?:*/*": "${workspaceFolder}/src/clients/vscode/*"
			},
			"debugWebviews": true
		}
	]
}