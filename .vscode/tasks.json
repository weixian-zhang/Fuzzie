// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "vscode ext - npm run watch",
			"type": "shell",
			"command": "npm run watch",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/src/clients/vscode"
			}
		},
		{
			"label": "run openapi3 server background",
			"type": "shell",
			"command": "flask run",
			"problemMatcher": [],
			"options": {
				"env": {
					"FLASK_APP": "openapi3_server"
				},
				"cwd": "${workspaceFolder}/src/tests/core"
			}
		},
		{
			"label": "python shiv core",
			"type": "shell",
			"command": "shiv -o ./dist/fuzzie.pyz --site-packages core -e core.main:fuzz --root . .",
			"options": {
				"cwd": "${workspaceFolder}/src/core"
			}
		},
		{
			"label": "run python zipapp",
			"type": "shell",
			"command": "python fuzzie.pyz",
			"options": {
				"cwd": "${workspaceFolder}/src/core/dist"
			}
		}
	]
}