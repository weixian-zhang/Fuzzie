{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "debug test - openapi3 server",
			"type": "python",
			"request": "launch",
			"module": "flask",
			"env": {
				"FLASK_APP": "openapi3_server",
				"FLASK_ENV": "development"
			},
			"args": [
				"run",
				"--no-debugger"
			],
			"jinja": true,
			"justMyCode": true,
			"cwd": "${workspaceFolder}/src/tests/core"
		},
		{
			"name": "debug fuzzie fuzzer",
			"type": "python",
			"request": "launch",
			"program": "main.py",
			"args": ["fuzz", "--openapi-url=http://hello.com"],
			"console": "integratedTerminal",
			"justMyCode": true,
			"cwd": "${workspaceFolder}/src/core/core"
		},
		{
			"name": "debug fuzzie client - vscode",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/src/clients/vscode"
			],
			"outFiles": [
				"${workspaceFolder}/src/clients/vscode/dist/**/*.js"
			],
			//"preLaunchTask": "vscode ext - npm run watch",
			
			"sourceMaps": true,
			//important, if not breakpoint remains unbound
			"sourceMapPathOverrides": {
				"webpack://?:*/*": "${workspaceFolder}/src/clients/vscode/*"
			}
		},
	]
}