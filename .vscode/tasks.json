{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"label": "vscode npm watch",
			"script": "watch",
			// "problemMatcher": [
			// 	"$ts-webpack-watch",
			// 	"$tslint-webpack-watch"
			// ],
			// "isBackground": true,
			// "presentation": {
			// 	"reveal": "never",
			
			// 	"group": "watchers"
			// },
			// "group": {
			// 	"kind": "build",
			// 	"isDefault": true
			// },
			"path": "src/clients/vscode"
		},
		{
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build",
			"path": "src/clients/vscode"
		},
		{
			"label": "vscode npm watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		},
		{
			"label": "run openapi3 server background",
			"type": "shell",
			"command": "flask run",
			"problemMatcher": [],
			"options": {
				"env": {
					"FLASK_APP": "openapi3_server"
				},
				"cwd": "${workspaceFolder}/src/tests/core"
			}
		}
	]
}