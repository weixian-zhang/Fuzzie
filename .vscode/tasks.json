// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "vscode ext - npm run watch",
			"type": "shell",
			"command": "npm run watch",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/src/clients/vscode"
			}
		},
		{
			"label": "run openapi3 server background",
			"type": "shell",
			"command": "flask run",
			"problemMatcher": [],
			"options": {
				"env": {
					"FLASK_APP": "openapi3_server"
				},
				"cwd": "${workspaceFolder}/src/tests/core"
			}
		},
		{
			"label": "python shiv core",
			"type": "shell",
			"command": "shiv -o ./dist/fuzzie-fuzzer.pyz --site-packages core -e core.main:startup --root . .",
			"options": {
				"cwd": "${workspaceFolder}/src/core"
			},
			"dependsOn": [
				"dependencytask- pip freeze"
			]
		},
		{
			"label": "dependencytask- pip freeze",
			"type": "shell",
			"command": " py -3.10 -m pip freeze > requirements.txt",
			"options": {
				"cwd": "${workspaceFolder}/src/core/core"
			}
		},
		{
			"label": "run fuzzie-fuzzer.pyz",
			"type": "shell",
			"command": "python fuzzie-fuzzer.pyz",
			"options": {
				"cwd": "${workspaceFolder}/src/core/dist"
			}
		}
	]
}