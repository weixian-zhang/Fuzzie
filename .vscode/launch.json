// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/src/clients/vscode"
			],
			"outFiles": [
				"${workspaceFolder}/src/clients/vscode/dist/**/*.js"
			],
			"preLaunchTask": "vscode npm watch-tests"
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/src/clients/vscode",
				"--extensionTestsPath=${workspaceFolder}/src/clients/vscode/dist/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/src/clients/vscode/dist/test/**/*.js"
			],
			"preLaunchTask": "vscode npm watch-tests"
		}
	]
}
