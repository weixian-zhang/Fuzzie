{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"strictNullChecks": true,
		"esModuleInterop": true,
    	"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
    	"skipLibCheck": true,
	}
}
